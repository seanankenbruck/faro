{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kafka": {
    "BootstrapServers": "localhost:29092",
    "Topic": "faro-metrics",
    "ProducerConfig": {
      "Acks": "1",
      "EnableIdempotence": true,
      "MaxInFlight": 5,
      "CompressionType": "snappy",
      "LingerMs": 100,
      "BatchSize": 16384,
      "Partitioner": "murmur2"
    }
  },
  "MetricsCollector": {
    "FlushIntervalSeconds": 1,
    "BatchSize": 1000
  }
}